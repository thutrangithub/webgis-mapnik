					showValidate(usernameInput);
					return showValidate(passwordInput);
				}else{
					return !username ? showValidate(usernameInput) : showValidate(passwordInput);
				}
			}
			// call api login
			try{
				const res = await login({username, password});
			}catch (error){
				// TypeError: Failed to fetch
				console.log('There was an error', error);
			}
		});

		const login = async function loginUser({username, password}) {
			axios.get(`http://localhost:${port}/api/generate-token?username=${username}&password=${password}`)
			.then(function (response) {
				// save token to storage
				localStorage.setItem('token', response.data);
				// redirect to map dashboard
				window.location.href = `http://localhost:${port}/map`
			})
			.catch(function (error) {
				if (error.response) {
					errorCredential.innerText = error.response.data;
					return errorCredential.classList.remove('d-none');
				}
				
			});
		}
